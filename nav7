  <div *ngIf="currentPage === 'products'" class="page">
    <h2>Our Products</h2>
    <div class="product-grid">
      <div class="card" *ngFor="let p of products">
        <img [src]="p.image" [alt]="p.name">
        <h3>{{ p.name }}</h3>
        <p>‚Çπ{{ p.price }}</p>
        <button (click)="addToCart(p)">Add to Cart</button>
      </div>
    </div>
  </div>

  <!-- Cart Page -->
  <div *ngIf="currentPage === 'cart'" class="page">
    <h2>Your Shopping Cart</h2>

    <div *ngIf="cart.length === 0">
      <p>Your cart is empty!</p>
      <img src="https://img.freepik.com/free-vector/empty-cart-concept-illustration_114360-2155.jpg"
           alt="Empty Cart" class="banner">
    </div>

    <div *ngIf="cart.length > 0">
      <ul class="cart-list">
        <li *ngFor="let item of cart; let i = index">
          <span>{{ item.name }} - ‚Çπ{{ item.price }}</span>
          <button class="remove-btn" (click)="removeFromCart(i)">‚ùå Remove</button>
        </li>
      </ul>
      <h3>Total: ‚Çπ{{ getTotal() }}</h3>
    </div>
  </div>
</div>

